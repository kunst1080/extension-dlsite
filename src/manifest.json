{
  "manifest_version": 3,
  "name": "DLsite Extension",
  "version": "0.0.1",
  "description": "DLsite と DLsite Play の機能拡張",
  "action": {
    "default_title": "DLsite Extension"
  },
  "content_scripts": [
    {
      "matches": ["https://play.dlsite.com/*"],
      "js": ["play.js"],
      "css": ["style.css"]
    },
    {
      "matches": ["https://www.dlsite.com/*"],
      "js": ["list.js"],
      "css": ["style.css"]
    }
  ]
}
